---
import Toast from "@components/Toast.astro";
import astroLogo from "../assets/astro.svg";
---

<div
  id="container"
  class="flex flex-col md:block md:flex-none h-full font-sans"
>
  <main class="h-full flex justify-center">
    <section
      id="hero"
      class="pt-12 md:pt-0 block md:flex md:flex-col md:justify-center md:items-start p-4"
    >
      <a href="https://astro.build"
        ><img
          src={astroLogo.src}
          width="115"
          height="48"
          alt="Astro Homepage"
        /></a
      >

      <h1 class="my-4 text-xl leading-6">
        To get started, open the <code
          class="bg-accent rounded-lg border border-transparent inline-block py-1.5 px-2"
        >
          <pre
            class="font-mono font-semibold m-0 text-clip text-transparent bg-clip-text bg-gradient-to-r from-secondary to-primary">src/pages</pre></code
        > directory in your project.
      </h1>

      <section id="links" class="flex flex-wrap md:flex-nowrap gap-4">
        <a class="btn btn-primary" href="https://docs.astro.build"
          >Read our docs</a
        >

        <a class="btn btn-ghost" href="https://astro.build/chat"
          >Join our Discord <svg
            class="h-4 ml-2"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 127.14 96.36"
            ><path
              fill="currentColor"
              d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z"
            ></path></svg
          >
        </a>
      </section>
    </section>
  </main>

  <Toast />
</div>
